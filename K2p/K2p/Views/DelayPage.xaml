                        <Entry.Behaviors>
                            <b:EventToCommandBehavior EventName="Completed" Command="{Binding EntryCompletedCommandCh6}"/>
                        </Entry.Behaviors>
                    </Entry>
                    <Label Grid.Column="3" Text="ms" VerticalTextAlignment="Center" Style="{StaticResource LabelStyle}" />
                </Grid>

                <Grid Padding="2,0,10,0" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
