                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"  Text="{Binding LabelCh6}"  TextColor="{Binding TextColorCh6}" Style="{StaticResource LabelTitleStyleNoColor}"  />
